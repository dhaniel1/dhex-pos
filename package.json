{
  "name": "dhex-pos",
  "scripts": {
    "ancient": "clojure -Sdeps '{:deps {com.github.liquidz/antq {:mvn/version \"RELEASE\"}}}' -m antq.core",
    "watch": "npx shadow-cljs watch app",
    "release": "npx shadow-cljs release app",
    "build-report": "npx shadow-cljs run shadow.cljs.build-report app target/build-report.html",
    "babel:watch": "babel src-js --out-dir src-js-dist --watch --extensions \".tsx,.ts,.js,.jsx\"",
    "tailwind:watch": "npx tailwindcss -i ./resources/public/css/globals.css -o ./resources/public/css/main.css --watch",
    "tailwind:build": "npx tailwindcss -i ./resources/public/css/globals.css -o ./resources/public/css/main.css --minify",
    "deps:watch": "concurrently \"npm run babel:watch\" \"npm run tailwind:watch\"",
    "dev": "concurrently \"npm run deps:watch\" \"npx shadow-cljs watch app\""
  },
  "dependencies": {
    "@radix-ui/react-slot": "^1.2.4",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.554.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "tailwind-merge": "^3.4.0",
    "tailwindcss-animate": "^1.0.7",
    "tw-animate-css": "^1.4.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.28.3",
    "@babel/core": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "@babel/preset-react": "^7.28.5",
    "@babel/preset-typescript": "^7.28.5",
    "autoprefixer": "^10.4.22",
    "babel-plugin-module-resolver": "^5.0.2",
    "concurrently": "^9.2.1",
    "shadow-cljs": "2.26.2",
    "tailwindcss": "^3.4.18"
  }
}
